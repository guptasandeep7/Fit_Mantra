<resources>
    <!-- Base application theme. -->
    <style name="Theme.MoreFit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
    //Splash Screen

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="android:statusBarColor">@color/orange</item>
    </style>
    //chip

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    //Shapeable circular image

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="CardView.CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/black_gradient2</item>
    </style>

    <style name="CustomCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
    </style>

    <style name="CalculateBottomSheetButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
</resources>