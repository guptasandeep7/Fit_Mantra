<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dateCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/poppins_bold"
                android:text="AUG"
                android:paddingTop="4dp"
                android:paddingHorizontal="4dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="17"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:paddingBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/month"
                app:layout_constraintStart_toStartOf="@id/month"
                app:layout_constraintTop_toBottomOf="@id/month" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/level1"
        android:layout_width="24dp"
        android:layout_height="3dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/dateCardView"
        app:layout_constraintTop_toTopOf="@+id/dateCardView" />

    <View
        android:id="@+id/level2"
        android:layout_width="24dp"
        android:layout_height="3dp"
        android:layout_marginStart="4dp"
        android:background="@color/teal_200"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintTop_toTopOf="@+id/level1" />

    <View
        android:id="@+id/level3"
        android:layout_width="24dp"
        android:layout_height="3dp"
        android:layout_marginStart="4dp"
        android:background="@color/purple_500"
        app:layout_constraintStart_toEndOf="@+id/level2"
        app:layout_constraintTop_toTopOf="@+id/level2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/exerciseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="sffufgdfadfgesucfnsegllllpescgraugauagdudgaufgfaufgfuagfaufga"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateCardView"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="12 Reps"
        android:textColor="#BEBEBE"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@id/repCount"
        android:layout_marginTop="24dp"/>


